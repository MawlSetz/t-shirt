<html>
<%= erb :header %>
		<div class="content">
			<!-- <ul class = "this_tshirt"> -->
				<div >
					<span href = "/tshirts/<%= tshirt.id %>"> 
						<img style="height:auto; width:auto; max-width:500px; max-height:500px;" src="<%= tshirt.image_url %>"></img>
						<br>
						<%= tshirt.style %>
						<br>
						
								<%= tshirt.description %>
								<br>
								$<%= tshirt.price%>
								<br>
								<% if tshirt.quantity_available > 0 %>
								In stock!
								
								<form action="/tshirts/<%= tshirt.id %>/newSale" method="GET">
									<button>BUY</button>
								</form>
								<% else %>
								Sold out! 
								<% end %>
						
					</span>		
				
				</div>
			<!-- </ul> -->
		</div>
	<footer><%= erb :page_footer %></footer>
	</body>
