<html>
	<head>
		<title>Tshirt.ly - Buy Cool T's</title>
		<!-- Link to stylesheet -->
		<link rel="stylesheet" type="text/css" href="../css/styles.css">
		<!-- Link to GoogleFonts -->
		<link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,600italic,700italic,800italic,400,300,600' rel='stylesheet' type='text/css'>
		<link href='http://fonts.googleapis.com/css?family=Lora:400,400italic' rel='stylesheet' type='text/css'>
	</head>
	<body>
		<header>
			<h1> Tshirt.ly </h1>
			<h2>Your source for cool T's</h2>
		</header>
		<div class="content">
			<ul class = "this_tshirt">
				<li>
					<span href = "/tshirts/<%= tshirt.id %>"> 
						<image src="<%= tshirt.image_url %>"></image>
						<br>
						<%= tshirt.style %>
						<br>
						<ul class="shirt_info">
							<li>
								<%= tshirt.description %>
								<br>
								$<%= tshirt.price%>
								<br>
								<% if tshirt.quantity_available > 0 %>
								In stock!
								
								<form action="/tshirts/<%= tshirt.id %>/newSale" method="GET">
									<button>BUY</button>
								</form>
								<% else %>
								Sold out! 
								<% end %>
							</l1>
						</ul>
					</span>		
				</li>
			</ul>
		</div>
	<%= erb :page_footer %>	
	</body>
</html>